<div class="row" style="padding-top: 15px;">
  <div class="col-xl-12">
    <div class="card ">
      <div class="card-body">
        <div class="top-headers">
          <h4 class="mt-0 mb-4" style="font-size: 22px;">Yangiliklar ro'yhati</h4>
          <a href="/news" class="btn btn-success ">Qo'shish</a>
        </div>

        <div class="table-responsive">
          <table class="table table-hover table-bordered text-center">
            <thead class="thead-dark">
              <tr>
                <th style="font-size: 13px;" scope="col">Rasm</th>
                <th style="font-size: 13px;" scope="col">Sarlavha</th>
                <th style="font-size: 13px;" scope="col">Kategoriya</th>
                <th style="font-size: 13px;" scope="col">Sana</th>
                <th style="font-size: 13px;" scope="col" colspan="2">Sozlama </th>

              </tr>
            </thead>
            <tbody>
              <% for (const item of allNews) { %>
                <tr>

                  <td>
                    <img style="width: 80px; " src="/uploads/news/<%= item.image %>"
                      name="photo">
                  </td>
                  <td>
                    <span style="font-size: 13px; color: #000;">
                      <%= item.title %>
                    </span>
                  </td>
                  <td>
                    <span style="font-size: 13px; color: #000;">
                      <%= item.categoryID %>
                    </span>
                  </td>
                  
                  <td>
                    <span style="font-size: 13px; color: #000;">
                      <%= moment(item.date).format("DD/MM/YYYY - hh:mm:ss") %>
                    </span>
                  </td>
                  <td>
                    <div>
                      <a href="<%=`/new/getbyid/${item._id}`%>" class="btn btn-primary">
                        <i class="mdi mdi-pen text-white" style="font-size: 16px;"></i>
                      </a>
                      <a href="<%=`/new/getInfo/${item._id}`%>" class="btn btn-warning">
                        <i class="mdi mdi-book text-white" style="font-size: 16px;"></i>
                      </a>
                    </div>
                  </td>
                </tr>
                <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

</div>